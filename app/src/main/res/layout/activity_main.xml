<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERFORMANCE BENCHMARKING"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:layout_marginTop="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="55sp"
            android:paddingRight="55sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50sp">
            <EditText
                android:id="@+id/msgField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Enter your message"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="147dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="55sp"
            android:paddingRight="55sp"
            android:layout_marginTop="25sp">

            <Button
                android:id="@+id/submitMsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="411dp"
                tools:layout_editor_absoluteY="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55sp"
            android:layout_marginTop="35sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="RESULTS :"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="314dp" />

            <TextView
                android:id="@+id/msgResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55sp"
            android:layout_marginTop="15sp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excution TIme :"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="375dp" />

            <TextView
                android:id="@+id/execTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="14dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>